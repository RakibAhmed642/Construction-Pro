
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Standard rule for user-siloed data access
    // This covers all sub-collections including projects, employees, transactions, and documents
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Explicit permission for the documents collection to prevent listing errors
    // Adding a comment to trigger deployment watcher: Document System Enabled
    match /users/{userId}/documents/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
